@model VersionDoc.Models.File
@{
    ViewData["Title"] = "Remove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Remove<a href="#helpModal" data-toggle="modal" data-target="#helpModal"><span class="pull-right glyphicon glyphicon-question-sign" style="color:dodgerblue; font-size:larger"></span></a></h3>
<p class="text-center" style="color:red; font-size:medium">
    Are you sure that you want to delete this file, once the file 
    is deleted it can't be restored.
</p>

<form class="container-fluid" asp-controller="MyDocuments" asp-action="Remove" method="post">
    <div class="form-group" style="font-size:medium">
        <label class="col-lg-2">File Name:</label>
        <div class="col-lg-9" style="font-size:medium">
            <input asp-for="FileName" class="form-control input-lg" id="FileName" type="text"/>
        </div>
    </div>
    <div class="form-group" style="font-size:medium">
        <label class="col-lg-2">Size:</label>
        <div class="col-lg-9" style="font-size:medium">
            <input asp-for="FileSize" class="form-control input-lg" id="FileSize" type="text"/>
        </div>
    </div>

    <div class="form-group" style="font-size:medium">
        <label class="col-lg-2">File Type:</label>
        <div class="col-lg-9" style="font-size:medium">
            <input asp-for="FileType" class="form-control input-lg" id="FileType" type="text"/>
        </div>
    </div>

    <div class="form-group" style="font-size:medium">
        <label class="col-lg-2">Uploaded Date:</label>
        <div class="col-lg-9" style="font-size:medium">
            <input asp-for="FileUploadDate" class="form-control input-lg" id="FileUploadDate"type="text"/>
        </div>
    </div>

    <div class="col-xs-2">
        <input class="btn btn-danger" type="submit" id="Submit" name="Submit" value="Delete Document" /><br>
</div>
</form>

<div class="modal fade" id="helpModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" wfd-id="461">&times;</button>
                <h4 class="modal-title">Help</h4>
            </div>
            <div class="modal-body" wfd-id="23">
                <p>This page is used to remove the file</p>
                <p>If you press the Delete button, the file will be permanently deleted</p>
            </div>
            <div class="modal-footer" wfd-id="22">
                <button type="button" class="btn btn-primary" data-dismiss="modal" wfd-id="460">Close</button>
            </div>
        </div>
    </div>
</div>